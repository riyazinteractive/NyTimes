{
  "name": "NYTimes",
  "version": "0.0.1",
  "author": "Riyaz",
  "giturl": "https://github.com/riyazinteractive/NyTimes.git",
  "private": true,
  "scripts": {
    "start": "react-native start",
    "test": "jest",
    "fix": "eslint . --fix",
    "prettier": "prettier-eslint \"src/**/*.js\"",
    "lint": "standard --verbose | snazzy",
    "fixcode": "standard --fix"
  },
  "dependencies": {
    "apisauce": "^1.0.3",
    "react": "16.8.6",
    "react-native": "0.62.3",
    "react-native-device-info": "^2.2.2",
    "react-native-gesture-handler": "^1.3.0",
    "react-native-material-menu": "^0.6.4",
    "react-native-paper": "^2.16.0",
    "react-native-vector-icons": "^6.6.0",
    "react-navigation": "^3.11.1",
    "react-redux": "^7.1.0",
    "redux": "^4.0.4",
    "redux-saga": "^1.0.5",
    "reduxsauce": "^1.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/runtime": "^7.5.5",
    "@react-native-community/eslint-config": "^0.0.5",
    "babel-jest": "^24.8.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "eslint": "^6.0.1",
    "jest": "^24.8.0",
    "metro-react-native-babel-preset": "^0.55.0",
    "prettier-eslint": "^9.0.0",
    "react-dom": "^16.8.6",
    "react-test-renderer": "16.8.6",
    "redux-mock-store": "^1.5.3",
    "snazzy": "^8.0.0",
    "standard": "^13.1.0"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "/node_modules/",
      "<rootDir>/jest/Setup.js"
    ],
    "setupFiles": [
      "<rootDir>/jest/Setup",
      "./node_modules/react-native-gesture-handler/jestSetup.js"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(jest-)?react-native|react-navigation|react-native-gesture-handler|react-navigation-redux-helpers|@react-navigation/.*)"
    ],
    "preset": "react-native"
  },
  "standard": {
    "parser": "babel-eslint",
    "globals": [
      "describe",
      "test",
      "it",
      "jest",
      "beforeAll",
      "beforeEach",
      "afterAll",
      "afterEach",
      "expect",
      "fetch",
      "navigator",
      "__DEV__",
      "XMLHttpRequest",
      "FormData",
      "React$Element",
      "If",
      "Choose",
      "When",
      "Otherwise",
      "For",
      "With"
    ]
  }
}
